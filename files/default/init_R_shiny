# This script will be run when a new shiny-server gets deployed

# packages to install by default from CRAN
pkgs <- c("shiny","jsonlite","XML","ggplot2","rmarkdown",
			"plyr","httr","devtools","lubridate","reshape2","googleVis",
			"stringi", "knitr", "data.table", "DT", "arulesViz", "rpart", "rpart.plot",
			"networkD3")

# install packages from cran
install.packages(
				 	pkgs, 
					repos='http://cran.us.r-project.org',
					quiet = TRUE,
					verbose = FALSE
				)

# install packages from github
library(devtools)
devtools::install_github("cloudyr/aws.signature")
devtools::install_github("keboola/sapi-r-client")
devtools::install_github("keboola/shiny-lib")


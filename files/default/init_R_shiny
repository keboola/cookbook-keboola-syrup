# This script will be run when a new shiny-server gets deployed

# packages to install by default from CRAN
pkgs <- c("shiny","jsonlite","XML","ggplot2","rmarkdown","plyr","httr")

# install packages from cran
install.packages(
				 	pkgs, 
					repos='http://cran.us.r-project.org',
					quiet = TRUE,
					verbose = FALSE
				)

